{
    "name": "tsdl-actual", 
    "version": "0.9.1",
    "dependencies": {
        "sdl2": "bsansouci/SDL-mirror.git#esy",
        "@opam-alpha/topkg": "*",
        "@opam-alpha/ctypes-foreign": "*",
        "@opam-alpha/ocamlfind": "*",
        "@opam-alpha/ctypes": ">= 0.9.0",
        "substs": "esy-ocaml/substs.git",
        "@opam-alpha/ocamlbuild": "*",
        "@opam-alpha/result": "*",
        "opam-installer-bin": "esy-ocaml/opam-installer-bin.git"
    },
    "esy": {
      "build": ["ocaml pkg/pkg.ml build --pinned false && (opam-installer --prefix=$cur__install || true)"],
      "buildsInSource": true,
      "exportedEnv": {
        "CAML_LD_LIBRARY_PATH": {
          "scope": "global",
          "val": "$tsdl_actual__lib/stublibs:$CAML_LD_LIBRARY_PATH"
        }
      }
    },
    "devDependencies": {
      "ocaml": "esy-ocaml/ocaml#esy"
    }
}
